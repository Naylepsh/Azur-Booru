<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet"> 
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/posts.css">
  <title>Image List</title>
</head>

<body>
  <div class="container masthead">
      <% include ../partials/nav-bar.ejs %>
  </div>
  <div class="container">
    <% include ../partials/search-bar.ejs %>
    <div id="content">
      <section class="tags">
        <ul>
          <% if (tags) { %>
            <% for (const tag of tags) { %>
              <div>
              <li class="tag"><a href="/posts?tags=<%= tag.name %>"><%= tag.name %></a> <span><%= tag.occurences %></span></li>
              </div>
            <% } %>
          <% } %>
        </ul>
      </section>
      <section class="thumbnails">
        <% for (const post of posts) { %>
          <% if (post && post.imageLink) { %>
            <div class="thumbnail-preview">
              <a href="/posts/<%= post._id %>"><img src="<%= post.imageLink %>"></a>
            </div>
          <% } %>
        <% } %>
      </section>
    </div>
    <section class="pagination">
      <span class="pages">
        <a href="/posts?<%= ['page=1', tagsQuery].join('&') %>"><<</a>
        <% for (let i = Math.max(1, page_info.current_page - 5); i <= Math.min(page_info.last_page, page_info.current_page + 5); i++) { %>
          <% if (i == page_info.current_page) { %>
            <a id="active-page" href="/posts?['page='+i, tagsQuery].join('&') %>"><%= i %></a>
          <% } else { %>
            <a href="/posts?<%= ['page='+i, tagsQuery].join('&') %>"><%= i %></a>
          <% } %>
        <% } %>
        <a href="/posts?<%= ['page='+page_info.last_page, tagsQuery].join('&') %>">>></a>
      </span>
    </section>   
  </div>

<% include ../partials/footer.ejs %>